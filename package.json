{
  "name": "microservice-typescript",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "nodemon",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "npx husky install",
    "lint": "npx eslint \"src/**/*.ts\" --fix --max-warnings 0",
    "pre-start:prod": "rimraf build && npm run build",
    "start:prod": "npm run pre-start:prod && node build/index.js",
    "test": "jest",
    "test:cov": "rimraf coverage && npm run test -- --coverage",
    "sonar-scanner": "npx sonar-scanner",
    "test:lint-staged": "npm run test --findRelatedTests",
    "test:watch-all": "npm run test -- --watchAll",
    "test:watch-unit": "npm run test:watchAll -- --testMatch \"**/?*.spec.ts?(x)\"",
    "test:watch-integration": "npm run test:watchAll -- --testMatch \"**/?*.test.ts?(x)\"",
    "remove": "rimraf coverage && rimraf build && rimraf node_modules && rimraf package-lock.json"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "helmet": "^6.0.1",
    "morgan": "^1.10.0",
    "winston": "^3.8.2",
	"ejs": "^3.1.9",
    "ytdl-core": "^4.11.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@types/express": "^4.17.15",
    "@types/jest": "^29.2.4",
    "@types/node": "^18.11.18",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.1",
    "semantic-release": "^19.0.5",
    "sonarqube-scanner": "^2.9.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  }
}
